{
  "name": "servatron",
  "version": "2.3.1",
  "description": "Create a handler that can server static files using the NodeJS http/http2 modules, or use the inbuilt cli server to quickly run a web server.",
  "main": "http2.js",
  "bin": {
    "servatron": "bin/cli.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "docs": "typedoc src",
    "lint": "eslint .",
    "test": "node --unhandled-rejections=strict test"
  },
  "keywords": [
    "static",
    "http",
    "http2",
    "https",
    "serve",
    "server",
    "web",
    "web server",
    "website",
    "multiplex",
    "assets",
    "static server"
  ],
  "author": {
    "email": "me@markwylde.com",
    "name": "Mark Wylde",
    "url": "https://github.com/markwylde"
  },
  "license": "MIT",
  "dependencies": {
    "mime": "^3.0.0",
    "minimist": "^1.2.6"
  },
  "devDependencies": {
    "@types/mime": "^2.0.3",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "axios": "^0.27.2",
    "basictap": "^3.2.3",
    "fetch-h2": "^3.0.2",
    "semistandard": "^16.0.1",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markwylde/servatron.git"
  },
  "bugs": {
    "url": "https://github.com/markwylde/servatron/issues"
  },
  "homepage": "https://github.com/markwylde/servatron#readme"
}
